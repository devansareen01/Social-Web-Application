<link rel="stylesheet" href="css/home.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" <div>
<div class="home-container">
    <div class=" friends-container">
        <% if(locals.user) { %>
            <h1>Friends</h1>
            <ul class="friends-list">
                <% for(u of all_users) { %>
                    <li>
                        <div class="friend_block">
                            <img src="<%= u.avatar%>" alt="<%= u.name%>" width="100">
                            <a href="/users/profile/<%= encodeURIComponent(u.id) %>">
                                <%= u.name %>
                            </a>
                        </div>
                    </li>
                    <% } %>
            </ul>
            <% } %>
    </div>

    <div id="feed-posts">
        <% if (locals.user) { %>
            <form action="/posts/create" id="new-post-form" method="post" enctype="multipart/form-data">
                <textarea name="content" cols="30" rows="3" placeholder="Type Here..." required="required"></textarea>
                <input type="file" name="media" accept="image/*, video/*">
                <input type="submit" value="Post">
            </form>
            <div class="LaunchChatPageButton">
                <a href="/chatBox"><button></button></a><i class="fa-solid fa-comment" style="color: #0a57db;"></i></a>
            </div>
            <% } %>
                <%if(locals.user){%>
                    <div id="posts-list-container">
                        <ul>
                            <% for (post of posts) { %>
                                <%-include('_post')-%>
                                    <% } %>
                        </ul>
                    </div>
                    <%}%>
    </div>
</div>
</div>
<script src="/js/home_posts.js"></script>