<li class="feed">
    <div class="head">
        <div class="user">
            <div class="profile-photo">
                <img src="<%=post.user.avatar%>" alt="<%post.user.name%>">
            </div>
            <div class="ingo">
                <h3>
                    <%= post.user.name%>
                </h3>
            </div>
            <span class="edit">
                <i class="uil uil-ellipsis-h"></i>
            </span>
        </div>
    </div>
    <div class="photo">
        <img src="<%=post.media%>" alt="<%=post.content%>">
    </div>
    <div class="action-buttons">
        <div class="interaction-buttons">

            <button class="toggle-like-button" data-postid="<%= post.id%>">
                <i class="uil uil-heart"></i>

                <span>
                    <%= post.likes.length%>
                </span>
            </button>

            <span><i class="uil uil-comment-dots"></i></span>
            <span>
                <% if (locals.user && locals.user.id==post.user.id) { %>
                    <a href="/posts/destroy/<%= post.id %>"><i class="bi bi-trash"></i> </a>
                    <% } %>
            </span>
        </div>
    </div>
    <div class="caption">
        <span>
            <%=post.content%>
        </span>
    </div>

</li>