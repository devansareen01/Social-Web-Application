<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<link rel="stylesheet" href="/css/sign_in.css">



<form action="/users/create-session" method="post">
    <div class="form signin">
        <div class="left">
            <img src="/images/image.png" alt="image not found">
            <p><a href="#" class="create">Create an Account</a></p>
        </div>
        <div class="right">
            <h1>Log In</h1>
            <div class="inputbox">
                <i class="fa-regular fa-user fa-beat"></i>
                <input placeholder="Your Email" type="email" name="email" required="required">
            </div>
            <div class="inputbox">
                <i class="fa-solid fa-lock"></i>
                <input placeholder="Password" type="password" name="password" required="required">
            </div>
            <div class="loginBtn">
                <button type="submit">
                    Login
                </button>
            </div>
        </div>
    </div>
</form>