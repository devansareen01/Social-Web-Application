<!-- _header.ejs -->
<header>
    <nav class="navbar">
        <div class="nav-brand">
            <h1 id="appName">VARTA CHAT</h1>
        </div>

        <ul class="nav-items">
            <% if (locals.user) { %>
                <li class="nav-item user-name">
                    <%= locals.user.name %>
                </li>
                <li class="nav-item">
                    <button class="button sign-out"><a href="/users/sign_out">Sign Out</a></button>
                </li>
                <% } else { %>
                    <li class="nav-item">
                        <button class="button sign-up"><a href="/users/sign_up">Sign Up</a></button>
                    </li>
                    <li class="nav-item">
                        <button class="button sign-in"><a href="/users/sign_in">Sign In</a></button>
                    </li>
                    <% } %>
        </ul>
    </nav>
</header>