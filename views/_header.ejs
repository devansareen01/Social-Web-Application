<!-- _header.ejs -->
<header>
    <nav class="navbar">
        <div class="nav-brand">
            <h1 id="appName">VARTA CHAT</h1>
        </div>

        <div class="nav-items"> <!-- Change ul to div -->
            <% if (locals.user) { %>
                <div class="nav-item user-name"> <!-- Change li to div -->
                    <a href="/">
                        Home
                    </a>
                </div>

                <div class="nav-item">
                    <a href="/users/profile/<%= user.id%>"><img src="<%= user.avatar%>" alt="<%= user.name%>"></a>
                </div>

                <div class="nav-item user-name">
                    <a href="/users/profile/<%= user.id%>">
                        <%= locals.user.name %>
                    </a>
                </div>

                <div class="nav-item">
                    <button class="button sign-out"><a href="/users/sign_out">Sign Out</a></button>
                </div>
            <% } else { %>
                
                <div class="nav-item">
                    <button class="button sign-up"><a href="/users/sign_up">Sign Up</a></button>
                </div>
                <div class="nav-item">
                    <button class="button sign-in"><a href="/users/sign_in">Sign In</a></button>
                </div>
            <% } %>
        </div>
    </nav>
</header>